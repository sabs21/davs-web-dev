{
  "name": "DAVS Site",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "forwardPorts": [8080],
  "postStartCommand": "/usr/local/bin/httpd-foreground",
  "customizations": {
    "vscode": {
      "extensions": ["emeraldwalk.RunOnSave", "esbenp.prettier-vscode"],
      "settings": {
        "emeraldwalk.runonsave": {
          "commands": [
            {
              "match": ".*",
              "cmd": "rsync -ca ./public-html/ /usr/local/apache2/htdocs"
            }
          ]
        }
      }
    }
  }
}
